{
  "compilerOptions": {
    "target": "ES2018",
    "types": ["node", "jest"],
    "module": "commonjs",
    "lib": ["es2018", "esnext.asynciterable"],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": "src",
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {}
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
